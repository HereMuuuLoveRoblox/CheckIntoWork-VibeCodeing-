{
  "expo": {
    "name": "Working Time",
    "slug": "working-time",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.workingtime.app",
      "infoPlist": {
        "NSCameraUsageDescription": "This app needs camera access to capture your face for check-in/check-out.",
        "NSPhotoLibraryUsageDescription": "This app needs photo library access to save captured images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.workingtime.app",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Working Time to access your camera for face check-in/check-out."
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Allow Working Time to access your location for check-in verification."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-eas-project-id"
      }
    },
    "owner": "your-expo-username"
  }
}
